            <div style="width: 22.5%">
                <label asp-for="MaLop"></label>
            </div>
            <div class=" col-4">
                <select asp-for="MaLop" class="custom-select" onchange="themoi(this.value)">
                    <option value="" selected>Chọn lớp</option>
                    @foreach (var item in context.LopHocs)
                    {
                        <option value="@item.MaLop">@item.TenLop</option>
                    }
                </select>
                <span asp-validation-for=" MaLop" class=" text-danger"></span>

            </div>
        </div>*@

    <div class="d-flex justify-content-center">
        <button class="btn btn-info " type="submit">Thêm mới</button>
        <a class=" btn btn-primary" asp-controller="Home" asp-action="XemChiTiet" asp-route-id="@malop.MaTheLoai">Hủy</a>
    </div>
</form>