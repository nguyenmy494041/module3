@model HocVien
@inject AppDbContext context
@{
    ViewBag.Title = "Thêm mới học viên";
    var malop = ViewBag.malop as HocVien;
}

<form asp-controller="Home" asp-action="ThemMoiHocVien" method="post" class=" bg-light rounded container">
    <h3>Thêm mới học viên</h3>
    <em class=" text-danger"> @ViewData["Message"]</em>
    <input style="display: none" asp-for="MaLop" value="@malop.MaLop" />
    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="HoTen"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" HoTen" class=" form-control " />
            <span asp-validation-for=" HoTen" class=" text-danger"></span>


        </div>
    </div>


    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="Ngaysinh"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" Ngaysinh" class=" form-control " />
            <span asp-validation-for=" Ngaysinh" class=" text-danger"></span>

        </div>
    </div>

    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="GioiTinh"></label>
        </div>
        <div class=" col-4">
            <select asp-for="GioiTinh" class="custom-select">
                <option value="" selected>Chọn giới tính</option>
                <option value="Nam" selected>Nam</option>
                <option value="Nữ" selected>Nữ</option>

            </select>
            <span asp-validation-for=" GioiTinh" class=" text-danger"></span>

        </div>
    </div>

    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="Email"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" Email" class=" form-control " />
            <span asp-validation-for=" Email" class=" text-danger"></span>

        </div>
    </div>
   
  
