                                        <h2 class="modal-title" style="margin: auto;color: red">Xóa thương hiệu</h2>
                                    </div>
                                    <div class="modal-body">
                                        <h6> Are you sure you want to delete Role "@item.ProductName" ?</h6>
                                    </div>
                                    <div class="modal-footer">
                                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger">Yes</a>
                                        <button type="button" class="btn btn-info" data-dismiss="modal">No</button>
                                    </div>
                                </div>
                            </div>
                        </div>*@
                </td>

            </tr>


        }

    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').dataTable(
                {
                    "columnDefs": [
                        {
                            "targets": 7,
                            "orderable": false
                        },

                    ]
                }
            );
        });
    </script>
    <script src="~/lib/bootbox/bootbox.js"></script>
   
    <script src="~/js/Xoahocsinh.js"></script>
