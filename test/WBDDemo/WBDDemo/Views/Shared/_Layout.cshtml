<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
</head>
<body>
    <div class=" container">
        <div>
            <nav class="navbar navbar-expand-sm bg-info navbar-dark">
                <!-- Brand/logo -->
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/images/logo.png" alt="logo" class=" rounded-circle" style="width:50px;">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link" >ManUnited</a>
                        </li>
                        <li class="nav-item">                          

                            <a href="@Url.Action("Create","Home",new Employee())"class="nav-link">Create</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link 3</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div>
            @RenderBody()
        </div>
        
        <footer class=" border-top cart-footer text-info">
            <span>&copy; Manchster United 2008 </span>
        </footer>
    </div>
    @RenderSection("Scripts", false);
</body>
</html>
