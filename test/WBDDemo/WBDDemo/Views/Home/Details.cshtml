
@model  HomeDetailsViewModel
@{
    //Layout = "~/Views/Shared/_layout.cshtml";
    ViewBag.Title = Model.TitleName;
    var avatePath = Model.Employee.AvatarPath??"no_avata.jfif";
    //var employee = ViewBag.Employees as Employee;

}
<div class="row justify-content-center">
    <div class=" col-sm-6">

        <div class="card my-2 ">
            <div class=" card-header text-center">
                <h4>@Model.Employee.Fullname</h4>
            </div>

            <div class=" card-body text-left">
                <img src="@Url.Content(@avatePath)" class="card-img-top" alt="Alternate Text" />
                <h5>Employee Id: @Model.Employee.Id</h5>
                <h5>Email: @Model.Employee.Email</h5>
                <h5>Department: @Model.Employee.Department</h5>
            </div>
            
            <div class=" card-footer text-center">
                <a asp-conteoller="Home" asp-action="Index" class=" btn btn-warning" style="width:20%">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Employee.Id" class=" btn btn-primary"style="width:20%">Edit</a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Employee.Id" class=" btn btn-danger"style="width:20%">Delete</a>

            </div>
          
        </div>


    </div>
</div>