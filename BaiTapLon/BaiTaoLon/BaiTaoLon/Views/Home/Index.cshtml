@model List<BaiTapLon.Models.ProductManagement.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@Model[0].ProductName @Model[0].ProductPrice  @Model[0].Category.CategoryName
<br />


@Html.Raw(Model[0].Description.Replace("\r\n", "<br />"))


@foreach (var item in Model)
{
    <p>@item.ProductName   @item.ProductPrice   </p>
    @foreach (var ite in item.Images)
    {
        <p>@ite.ImageName</p>
    }

    <hr />
}