@model AccountRegisterViewModel
@{
    ViewBag.Title = "Register User";
}

<form asp-controller="Account" asp-action="Register" method="post" class=" mt-4">
    <div asp-validation-summary="All" class=" text-danger"></div>
    <div class=" row form-group">
        <div class="col-sm-2">
            <label asp-for=" Email"></label>
        </div>
        <div class=" col-sm-10">
            <input asp-for=" Email" class=" form-control" />
            <span asp-validation-for=" Email" class=" text-danger"></span>
        </div>
    </div>
    <div class=" row form-group">
        <div class="col-sm-2">
            <label asp-for=" City"></label>
        </div>
        <div class=" col-sm-10">
            <input asp-for=" City" class=" form-control" />
            
        </div>
    </div>
    <div class=" row form-group">
        <div class="col-sm-2">
            <label asp-for=" Address"></label>
        </div>
        <div class=" col-sm-10">
            <input asp-for=" Address" class=" form-control" />
           
        </div>
    </div>

    <div class=" row form-group">
        <div class="col-sm-2">
            <label asp-for=" Passwork"></label>
        </div>
        <div class=" col-sm-10">
            <input asp-for=" Passwork" class=" form-control" />
            <span asp-validation-for=" Passwork" class=" text-danger"></span>
        </div>
    </div>

    <div class=" row form-group">
        <div class="col-sm-2">
            <label asp-for=" ConfirmPasswork"></label>
        </div>
        <div class=" col-sm-10">
            <input asp-for=" ConfirmPasswork" class=" form-control" />
            <span asp-validation-for=" ConfirmPasswork" class=" text-danger"></span>
        </div>
    </div>

    @*hien thi tat ca cac loi*@
    <div asp-validation-summary="None"></div>
    <div class=" row form-group">

        <div class=" col-sm-12">
            <button type="submit" class=" btn btn-primary">Register</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>

</form>