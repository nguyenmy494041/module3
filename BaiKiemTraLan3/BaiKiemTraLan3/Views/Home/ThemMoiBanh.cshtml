@model Cake
@inject AppDbContext context
@{
    ViewBag.Title = "Thêm mới học viên";
    var malop = ViewBag.malop as Cake;
}

<form asp-controller="Home" asp-action="ThemMoiBanh" method="post" class=" bg-light rounded container">
    <h3>Thêm mới Bánh</h3>
    <em class=" text-danger"> @ViewData["Message"]</em>
    <input style="display: none" asp-for="MaTheLoai" value="@malop.MaTheLoai" />

    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="TenBanh"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" TenBanh" class=" form-control " />
            <span asp-validation-for=" TenBanh" class=" text-danger"></span>


        </div>
    </div>


    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="ThanhPhan"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" ThanhPhan" class=" form-control " />
            <span asp-validation-for=" ThanhPhan" class=" text-danger"></span>

        </div>
    </div>


    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="HanSuDung"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" HanSuDung" class=" form-control " />
            <span asp-validation-for=" HanSuDung" class=" text-danger"></span>

        </div>
    </div>


    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="NgaySanXuat"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" NgaySanXuat" class=" form-control " />
            <span asp-validation-for=" NgaySanXuat" class=" text-danger"></span>

        </div>
    </div>

    
    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="GiaBan"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" GiaBan" class=" form-control " />
            <span asp-validation-for=" GiaBan" class=" text-danger"></span>

        </div>
    </div>


