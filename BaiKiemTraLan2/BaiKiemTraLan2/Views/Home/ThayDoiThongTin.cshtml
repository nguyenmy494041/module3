@model Book
@inject AppDbContext context
@{
    ViewBag.Title = "Thêm mới học viên";
}

<form asp-controller="Home" asp-action="ThayDoiThongTin" method="post" class=" bg-light rounded container">
    <div asp-validation-summary="All"></div>
    <input hidden asp-for="MaSach" />
    <h3>ThAY ĐỔI THÔNG TIN</h3>
    <em class=" text-danger"> @ViewData["Message"]</em>

    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="TenSach"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" TenSach" class=" form-control " />
            <span asp-validation-for=" TenSach" class=" text-danger"></span>


        </div>
    </div>


    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="TenTacGia"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" TenTacGia" class=" form-control " />
            <span asp-validation-for=" TenTacGia" class=" text-danger"></span>

        </div>
    </div>


    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="MoTa"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" MoTa" class=" form-control " />
            <span asp-validation-for=" MoTa" class=" text-danger"></span>

        </div>
    </div>


    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="NamXuatBan"></label>
        </div>
        <div class=" col-4">
            <select asp-for="NamXuatBan" class="custom-select">

                <option value="2017" selected>2017</option>
                <option value="2018" selected>2018</option>
                <option value="2019" selected>2019</option>
                <option value="2020" selected>2020</option>

            </select>
            <span asp-validation-for=" NamXuatBan" class=" text-danger"></span>

        </div>
    </div>

    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="Soluong"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" Soluong" class=" form-control " />
            <span asp-validation-for=" Soluong" class=" text-danger"></span>

        </div>
    </div>


    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="MaTheLoai"></label>
        </div>
        <div class=" col-4">
            <select asp-for="MaTheLoai" class="custom-select">
                @foreach (var item in context.TheLoais)
                {
                    <option value="@item.MaTheLoai">@item.TenTheLoai</option>
                }
                

            </select>
            <span asp-validation-for=" MaTheLoai" class=" text-danger"></span>

        </div>
    </div>

  

    <div class="d-flex justify-content-center">
        <button class="btn btn-info " type="submit">Thêm mới</button>
        <a class=" btn btn-primary" asp-controller="Home" asp-action="XemChiTiet" asp-route-id="@Model.MaTheLoai">Hủy</a>
    </div>
</form>